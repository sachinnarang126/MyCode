<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/lay_atnd_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/navi_lay_padding">

        <ImageView
            android:id="@+id/icon_attendence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/content_description"
            android:src="@drawable/icon_attendances"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/txt_atnd_list_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/icon_attendence"
            android:layout_toLeftOf="@+id/txt_atnd_list_icon"
            android:layout_toRightOf="@+id/icon_attendence"
            android:layout_toStartOf="@+id/txt_atnd_list_icon"
            android:gravity="start"
            android:text="@string/dashborad"
            android:textSize="@dimen/navi_txt_size" />

        <TextView
            android:id="@+id/txt_atnd_list_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/txt_circle_bg"
            android:padding="2dp"
            android:text="12" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/lay_atnd_list_item"
        android:background="@color/seperatorView" />
</RelativeLayout>